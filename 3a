import 'package:flutter/material.dart';

void main() => runApp(MaterialApp(home: L()));

class L extends StatelessWidget {
  @override
  Widget build(BuildContext c) {
    return Scaffold(
      appBar: AppBar(title: Text("Layouts")),
      body: Column(
        mainAxisAlignment: MainAxisAlignment.center,
        children: [
          Row(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              box(Colors.red),
              box(Colors.green),
              box(Colors.blue),
            ],
          ),
          const SizedBox(height: 20),
          Stack(
            alignment: Alignment.center,
            children: [
              box2(150, Colors.orange),
              box2(80, Colors.white),
            ],
          ),
        ],
      ),
    );
  }

  Widget box(Color c) => Container(width: 50, height: 50, color: c);
  Widget box2(double s, Color c) =>
      Container(width: s, height: s, color: c);
}
